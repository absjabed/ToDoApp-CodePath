<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    android:background="#f1f8e9"
    android:paddingTop="10dp"
    android:weightSum="10"
    android:paddingRight="10dp"
    tools:context="com.absjbd.todoapp.Activity.ItemAddActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etNewItem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:hint="Enter new ToDo task"
        android:paddingLeft="8dp"
        android:background="#f9f9f9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:gravity="center_horizontal"
        android:text="----------"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:text="Select ToDo task Status:"/>
    <Spinner
        android:id="@+id/spinrStatus"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="50dp"
        android:background="#f9f9f9" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:gravity="center_horizontal"
        android:text="----------"/>

    <EditText
        android:id="@+id/etTodoDate"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:inputType=""
        android:hint="Date or Day ex- dd/mm/yy or SUN"
        android:paddingLeft="8dp"
        android:background="#f9f9f9"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:gravity="center_horizontal"
        android:text="----------"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Select ToDo task Priority:"
        android:id="@+id/textView2" />

    <Spinner
        android:id="@+id/spinrPriority"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="50dp"
        android:background="#f9f9f9" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@color/colorAccent"
    android:textSize="10sp"
    android:gravity="center_horizontal"
    android:text="----------"/>


    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Add Todo task"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>

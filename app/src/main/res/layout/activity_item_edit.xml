<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:background="#f1f8e9"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    tools:context="com.absjbd.todoapp.Activity.ItemEditActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edittextE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:gravity="center_horizontal"
            android:text="----------"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:text="Select ToDo task Status:"/>
        <Spinner
            android:id="@+id/spinrStatusE"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:background="#f9f9f9" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:gravity="center_horizontal"
            android:text="----------"/>

        <EditText
            android:id="@+id/etTodoDateE"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:hint="Select ToDo task Date"
            android:paddingLeft="8dp"
            android:background="#f9f9f9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:gravity="center_horizontal"
            android:text="----------"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Select ToDo task Priority:"
            android:id="@+id/textView2" />

        <Spinner
            android:id="@+id/spinrPriorityE"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="50dp"
            android:background="#f9f9f9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <Button
                android:id="@+id/updatedatabase"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Update"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>
